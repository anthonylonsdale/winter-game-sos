<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - Snowball Stacker</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="snowfall" id="snowfall"></div>
    <main>
        @RenderBody()
    </main>

    <!-- Global 8-Bit Music Player -->
    <div class="music-player" id="musicPlayer">
        <!-- Minimized View -->
        <div class="player-minimized" id="playerMinimized">
            <div class="player-waveform">
                <canvas id="waveformCanvas" width="120" height="32"></canvas>
            </div>
            <div class="player-info-mini">
                <span class="track-name-mini" id="trackNameMini">No track</span>
            </div>
            <div class="player-controls-mini">
                <button class="player-btn" id="prevBtnMini" title="Previous">
                    <svg viewBox="0 0 24 24" width="16" height="16"><path fill="currentColor" d="M6 6h2v12H6V6zm3.5 6l8.5 6V6l-8.5 6z"/></svg>
                </button>
                <button class="player-btn play-btn" id="playBtnMini" title="Play/Pause">
                    <svg class="play-icon" viewBox="0 0 24 24" width="18" height="18"><path fill="currentColor" d="M8 5v14l11-7z"/></svg>
                    <svg class="pause-icon" viewBox="0 0 24 24" width="18" height="18" style="display:none"><path fill="currentColor" d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/></svg>
                </button>
                <button class="player-btn" id="nextBtnMini" title="Next">
                    <svg viewBox="0 0 24 24" width="16" height="16"><path fill="currentColor" d="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z"/></svg>
                </button>
                <button class="player-btn expand-btn" id="expandBtn" title="Expand">
                    <svg viewBox="0 0 24 24" width="16" height="16"><path fill="currentColor" d="M12 8l-6 6 1.41 1.41L12 10.83l4.59 4.58L18 14z"/></svg>
                </button>
            </div>
        </div>

        <!-- Expanded View -->
        <div class="player-expanded" id="playerExpanded" style="display: none;">
            <!-- Snow Effect -->
            <div class="player-snow-container" id="playerSnowContainer"></div>
            <div class="player-header">
                <div class="player-title">
                    <svg viewBox="0 0 24 24" width="20" height="20"><path fill="currentColor" d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/></svg>
                    <span>8-Bit Jukebox</span>
                </div>
                <button class="player-btn collapse-btn" id="collapseBtn" title="Minimize">
                    <svg viewBox="0 0 24 24" width="16" height="16"><path fill="currentColor" d="M16.59 8.59L12 13.17 7.41 8.59 6 10l6 6 6-6z"/></svg>
                </button>
            </div>

            <div class="player-visualizer">
                <canvas id="visualizerCanvas" width="280" height="80"></canvas>
            </div>

            <div class="player-now-playing">
                <div class="track-info">
                    <span class="track-name" id="trackName">No track selected</span>
                    <span class="track-artist" id="trackArtist">-</span>
                </div>
                <div class="track-progress">
                    <span class="time-current" id="timeCurrent">0:00</span>
                    <div class="progress-bar" id="progressBar">
                        <div class="progress-fill" id="progressFill"></div>
                    </div>
                    <span class="time-total" id="timeTotal">0:00</span>
                </div>
            </div>

            <div class="player-controls">
                <button class="player-btn" id="shuffleBtn" title="Shuffle">
                    <svg viewBox="0 0 24 24" width="18" height="18"><path fill="currentColor" d="M10.59 9.17L5.41 4 4 5.41l5.17 5.17 1.42-1.41zM14.5 4l2.04 2.04L4 18.59 5.41 20 17.96 7.46 20 9.5V4h-5.5zm.33 9.41l-1.41 1.41 3.13 3.13L14.5 20H20v-5.5l-2.04 2.04-3.13-3.13z"/></svg>
                </button>
                <button class="player-btn" id="prevBtn" title="Previous">
                    <svg viewBox="0 0 24 24" width="20" height="20"><path fill="currentColor" d="M6 6h2v12H6V6zm3.5 6l8.5 6V6l-8.5 6z"/></svg>
                </button>
                <button class="player-btn play-btn-main" id="playBtn" title="Play/Pause">
                    <svg class="play-icon" viewBox="0 0 24 24" width="28" height="28"><path fill="currentColor" d="M8 5v14l11-7z"/></svg>
                    <svg class="pause-icon" viewBox="0 0 24 24" width="28" height="28" style="display:none"><path fill="currentColor" d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/></svg>
                </button>
                <button class="player-btn" id="nextBtn" title="Next">
                    <svg viewBox="0 0 24 24" width="20" height="20"><path fill="currentColor" d="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z"/></svg>
                </button>
                <button class="player-btn" id="repeatBtn" title="Repeat">
                    <svg viewBox="0 0 24 24" width="18" height="18"><path fill="currentColor" d="M7 7h10v3l4-4-4-4v3H5v6h2V7zm10 10H7v-3l-4 4 4 4v-3h12v-6h-2v4z"/></svg>
                </button>
            </div>

            <div class="player-volume">
                <svg viewBox="0 0 24 24" width="16" height="16"><path fill="currentColor" d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02z"/></svg>
                <input type="range" id="volumeSlider" min="0" max="100" value="70" class="volume-slider">
            </div>

            <div class="player-playlist">
                <div class="playlist-header">
                    <span>Playlist</span>
                    <span class="track-count" id="trackCount">0 tracks</span>
                </div>
                <div class="playlist-tracks" id="playlistTracks">
                    <!-- Tracks will be populated by JavaScript -->
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/snowfall.js" asp-append-version="true"></script>
    <script src="~/js/musicplayer.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
